{% extends 'base.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ 'page_title.main.index'|trans }}{% endblock %}

{% block content %}
    <h2>{{ 'subtitle.main.index'|trans }}</h2>

    {% if last_error %}
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ last_error.messageKey|trans(last_error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('app_security_login_check') }}" method="post">
        <label for="username">{{ 'form.label.username'|trans }}</label>
        <input type="text" id="username" name="_player_username" value="{{ last_username }}" />

        <label for="password">{{ 'form.label.password'|trans }}</label>
        <input type="password" id="password" name="_player_password" />

        <button type="submit">{{ 'form.label.login'|trans }}</button>
    </form>
{% endblock %}
